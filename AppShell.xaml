<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WeatherWise.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:WeatherWise.View">
    <TabBar>

        <ShellContent Title="Home"
                      Icon="home.png"
                      ContentTemplate="{DataTemplate local:MainPage}"
                      Route="MainPage" ></ShellContent>

        <ShellContent Title="My Journal"
                      Icon="journal.png"
                      ContentTemplate="{DataTemplate local:AllNotesPage}"
                      Route="SavedDataPage"></ShellContent>

        <ShellContent Title="Gallery"
                      Icon="gallery.png"
                      ContentTemplate="{DataTemplate local:GalleryPage}"
                      Route="GalleryPage"></ShellContent>

        <ShellContent Title="Settings"
                      Icon="settings.png"
                      ContentTemplate="{DataTemplate local:SettingsPage}"
                      Route="SettingsPage"></ShellContent>
        

    </TabBar>
</Shell>
